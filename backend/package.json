  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260203.0",
    "@types/node": "^25.2.0",
    "esbuild": "^0.19.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.61.1"
  }
